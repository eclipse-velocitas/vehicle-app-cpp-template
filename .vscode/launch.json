        {
            "name": "VehicleApp - Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/app",
            "args": [ ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "SDV_VEHICLEDATABROKER_ADDRESS",
                    "value": "localhost:55555"
